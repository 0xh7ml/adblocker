{
  "manifest_version": 3,
  "name": "Project Tsukuyomi",
  "version": "1.0",
  "description": "Blocking irritating ads",
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "permissions":[
    "tabs",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
